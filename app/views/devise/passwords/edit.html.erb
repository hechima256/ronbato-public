<div class="users_wrapper">
    <div class="password_wrapper">
        <div class="centering_container pt-3em">
            <h1>パスワード変更</h1>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>

              <div class="field">
                <%= f.label :password, "新しいパスワード" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %>文字以上)</em><br />
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-text" %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation, "パスワード再入力" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-text" %>
              </div>

              <div class="actions mt-30px">
                <%= f.submit "変更", class: "btn btn-primary mb-10px"%>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
